<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" role="button">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/" class="nav-link" target="_blank">
                        @*<img src="~/Content/images/logo.png" alt="My Café" class="" style="width: 50px; margin-top: -10px; margin-right: 5px;">*@
                        <span class="">Big data course</span>
                    </a>
                </li>
            </ul>
            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Messages Dropdown Menu -->
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link nav-link-account" data-toggle="dropdown">
                        @*<p style="display: inline-table; margin-right: 11px;">@Session["hoTen"]</p>*@
                        <i class="far fa-user"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right" style="min-width: 200px;">
                        <a href="#" class="dropdown-item">
                            <i class="fas fa-address-card"></i>
                            <p class="text-sm" style="display: inline-block;">Thông tin tài khoản</p>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="~/Admin/Login/Logout" class="dropdown-item" onclick="return confirm('Bạn chắc chắn muốn đăng xuất?')">
