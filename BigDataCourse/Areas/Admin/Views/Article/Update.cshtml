@model BigDataCourse.Areas.Admin.Models.Article

@{
    ViewBag.Title = "Thông tin bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm bài viết</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        @Html.ActionLink("Danh sách bài viết", "Index", "Article")
                    </li>
                    <li class="breadcrumb-item active">Thông tin bài viết</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    @using (Html.BeginForm("Update", "Article", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card card-outline card-info">
            <div class="card-body">

                <div class="row">
                    <div class="col-md-12">
                        <!-- /.card-header -->
                        <div class="form-group">
                            <label>
                                Tên bài viết
                                <i class="fas fa-asterisk"></i>
                            </label>
                            <input type="hidden" name="id" value="@Model._id"/>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", required = true } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group news-description">
                            <label for="summernote">Nội dung</label>
                            @Html.TextAreaFor(model => model.Content)
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>
                                <i class="far fa-image"></i>
                                Ảnh bìa:
                            </label>
                            <input type="file" id="photo" name="photo" accept="image/png, image/gif, image/jpeg" onchange="previewFile(this);">
                            <img id="previewImg" src="~/Uploads/@Model.Image" style="width: 90px; display: block; margin-top: 10px;">
                            @Html.HiddenFor(model => model.Image)
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="form-group">
                            <label>Thẻ:</label>
                            <div>
                                @foreach (var item in ViewBag.listTag)
                                {
                                    string str = "";
                                    for (var i = 0; i < Model.Tags.Count; i++)
                                    {
                                        if (item.Name == Model.Tags[i].Name)
                                        {
                                            str = "checked";
                                            break;
                                        }
                                    }
                                    <div class="div-tag">
                                        <input name="tags" value="@item.Name" type="checkbox" @str />
                                        <label>@item.Name</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.col-->
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-2">
                <button type="submit" id="Submit" class="btn btn-block btn-success btn-lg">
                    <i class="ace-icon fa fa-check"></i>
                    Cập nhật
                </button>
            </div>
            <div class="col-md-2">
                <button type="reset" class="btn btn-block btn-info btn-lg">
                    <i class="fas fa-sync"></i>
                    Nhập lại
                </button>
            </div>
        </div>
    }

</section>

@section linkCss{
    <!-- summernote -->
    <link rel="stylesheet" href="~/Template/plugins/summernote/summernote-bs4.min.css">
}

    @section scripts{
    <script>
        $(function () {
            // Summernote
            $('#Content').summernote()
        });

        function previewFile(input) {
            var file = $("#photo").get(0).files[0];
            if (file) {
                var reader = new FileReader();
                reader.onload = function () {
                    $("#previewImg").attr("src", reader.result);
                }
                reader.readAsDataURL(file);
            }
        }
    </script>

    <!-- Summernote -->
    <script src="~/Template/plugins/summernote/summernote-bs4.min.js"></script>
}