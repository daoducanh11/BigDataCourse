@model List<BigDataCourse.Areas.Admin.Models.Categories>

@{
    ViewBag.Title = "Chủ đề";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh sách chủ đề</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid card card-outline card-info">
        <table class="table">
            <thead>
                <tr>
                    <th class="text-center">Tên dịch vụ</th>
                    <th class="text-center">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
 
                        <td class="text-center">
                            <a href="~/Home/ServiceDetail/@item._id" target="_blank" title="Sửa">
                                <i class="fas fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</section>
